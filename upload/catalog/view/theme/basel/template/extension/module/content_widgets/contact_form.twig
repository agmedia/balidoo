<div class="contact_form">
<form class="form-horizontal" id="mail_form{{ module }}">
<div class="form-group">
  <div class="col-sm-12">
  <label for="name"> {{ basel_text_name }}</label>
    <input type="text" name="name" value="" id="name" class="form-control" />
  </div>
</div>
<div class="form-group required">
  <div class="col-sm-12">
  <label for="email">{{ basel_text_email }}</label>
    <input type="text" name="email" id="email" value="" class="form-control" />
  </div>
</div>
<div class="form-group required">
  <div class="col-sm-12">
  <label for="message">{{ basel_text_message }}</label>
    <textarea name="text" rows="3" id="message" class="form-control"></textarea>
  </div>
</div>
  <div class="form-group required">
  <div class="col-sm-12">
  <label for="captcha">{{ basel_text_captcha }}</label>
    <div class="input-group">
    <span class="input-group-addon captcha_addon"><img src="index.php?route=extension/basel/basel_features/basel_captcha" alt="" class="captchaimg" /></span>
    <input type="text" name="captcha" id="captcha" value="" class="form-control" />
    </div>
  </div>
</div>
<div class="form-group">
<div class="col-sm-12">
  <button type="button" class="btn btn-outline" onclick="contact_form_send({{ module }});">{{ basel_text_submit }}</button>
  </div>
</div>
<div class="respond"></div>
</form>
</div>