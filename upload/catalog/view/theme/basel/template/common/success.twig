{{ header }}



<script>
  fbq('track', 'Purchase', {
    value: '{{ total }}',
    currency: 'EUR'
  });
</script>

<script>
  gtag('event', 'purchase', {
    "transaction_id": "{{ order_id }}",
    "value": "{{ total }}",
    "currency": "EUR"
  });
</script>

<!-- End Glami piXel -->
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9 col-sm-8' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }} mb-50">{{ content_top }}
      <h1 id="page-title">{{ heading_title }}</h1>
      <div class="inline-link">{{ text_message }}</div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}